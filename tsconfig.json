{
	"compilerOptions": {
		"strict": false,
		"sourceMap": true,
		"target": "es6",
		"module": "es2020",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"lib": [
			"es2017",
			"dom"
		],
		"typeRoots": ["node_modules/@types"],
		"rootDir": "./src/",
		"baseUrl": ".",
		"paths": {
			"@ore-three-ts" : ["src/common/ts/ore-three-ts/src"],
			"@gl/*" : ["src/ts/gl/*"],
			"@common/*" : ["src/ts/common/*"],
		}
	},
  	"include": [
		"./src/"
	],
	"exclude": [
		"node_modules"
	]

}